@page "/forumlist"

<Forums Target="@Target"/>

@code{
    public string? Target { get; set; }

    protected override void OnParametersSet()
    {
        Target = string.Empty;
        
        string uri = HttpUtility.UrlDecode(_navManager.Uri);

        if (!uri.Contains("?")) return;

        Target = uri?.Split("?")[1];        
    }
}
